<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/border" >

    <TextView android:id="@+id/text_reportListAdapter_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-1"
        android:layout_margin="5dp"
        />

    <TextView android:id="@+id/text_reportListAdapter_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Noviembre 2, 2017"
        android:layout_margin="5dp"
        android:layout_weight="1"/>

    <TextView android:id="@+id/text_reportListAdapter_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ExpresoTec"
        android:layout_margin="5dp"/>

</LinearLayout>
