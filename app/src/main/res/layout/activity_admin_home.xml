<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="itesm.mx.movilidad_reportedeproblemas.AdminHomeActivity"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            android:text="Bienvenido, "/>
        <TextView android:id="@+id/text_adminHome_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            android:text="Test"/>
    </LinearLayout>

    <Button android:id="@+id/button_adminHome_administer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Administrar reportes."/>

    <Button android:id="@+id/button_adminHome_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historial"/>

</LinearLayout>
